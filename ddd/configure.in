dnl Check socket libraries
dnl Configure code adapted from tk's configure.in
dnl We need to check whether we need the libraries because IRIX5 ships
dnl with bogus versions.
AC_CHECK_FUNC(connect, , ddd_check_socket=1)
if test "$ddd_check_socket" = 1; then
  AC_CHECK_LIB(socket, connect, LIBS="$LIBS -lsocket", ddd_check_both=1)
fi
if test "$ddd_check_both" = 1; then
  ddd_old_libs=$LIBS
  LIBS="$LIBS -lsocket -lnsl"
  AC_CHECK_FUNC(accept, checknsl=0, LIBS=$ddd_old_libs)
fi
AC_CHECK_LIB(nsl, gethostbyname, LIBS="$LIBS -lnsl")
AC_CHECK_FUNC(gethostbyname)
dnl
dnl If we use gcc or g++, link with -lg++ if it exists
if test "$GXX" = yes; then
AC_CHECK_LIB(g++, lib_error_handler, LIBS="$LIBS -lg++")
fi
