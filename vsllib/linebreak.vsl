#include "builtin.vsl"

linebreak_space = hspace(" " * 72);

old_talign(...) = (~)(...);

#pragma override (~)

(~)(a) = a;
(~)(a, b) = if (hspace(old_talign(a, b)) < linebreak_space)
	then old_talign(a, b) else a | b fi;
(~)(a, b, ...) = (~)((~)(a, b), ...);

// clear local definitions
#pragma undef old_talign, linebreak_space
